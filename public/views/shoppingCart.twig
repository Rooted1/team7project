<!DOCTYPE html>
<html>
{% extends 'layout.twig' %}

{% block body %}
  <h2 class="page-header">{{title}}</h2>
  {% if errors %}
      {% for error in errors %}
        <div class="alert alert-danger">{{ error.msg }}</div>
      {% endfor %}
  
  {% endif %}
   <form method="post" action="/shoppingCart">
    <div class="wrapper">
      <div class="row">
      {% if shoppingList %}
      {% for item in shoppingList %}
        <div class="col-md-4 well">
                <img src="">
               <label>Product Name:{{item.local.productName}}</label>
                <label>Product Description:{{item.local.productDesc}}</label>
                <label>Product Price:{{item.local.productPrice}}</label>
                <label><button class="btn btn-primary">Remove item</button></label>
                <!--<label>item.ProductPrice</label>-->
                <!--<label>item.ProductQuantity</label>-->
            </div>
      {% endfor %}
                <a href="#"class="btn btn-primary">Check out</a>
      {% endif %}
        <div>
          <p>No item in shopping cart.</p>
        </div>
        </div>
    </div>
  </form>
{% endblock %}
</html>


